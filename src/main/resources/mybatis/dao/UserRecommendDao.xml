<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.online_bookstore_backend.repository.UserRecommendDao">

    <select id="findByUserId" resultType="UserRecommend">
        select *
        from user_recommend
        where user_id = #{user_id}
        order by rand() limit #{bookNum};
    </select>

</mapper>
